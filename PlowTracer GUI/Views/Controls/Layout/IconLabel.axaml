<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:layout="clr-namespace:PlowTracer.GUI.Views.Controls.Layout"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlowTracer.GUI.Views.Controls.Layout.IconLabel">
    
    <UserControl.Template>
        <ControlTemplate TargetType="layout:IconLabel">
            <Grid ColumnDefinitions="Auto, *">
                <avalonia:MaterialIcon Grid.Column="0"
                                       Kind="{TemplateBinding IconKind}" />
                <TextBlock Grid.Column="1"
                           Text="{TemplateBinding Text}"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
    
</UserControl>
